  # }

  # Non-linear local component
   l <- B_st %*% b_st
   b_st[1] ~ dnorm(0,1)
   for (j in 2:n_knots_st) {
      b_st[j] ~ dnorm(b_st[1], sigma_st^-2)
  #    b_st[j] ~ dnorm(b_st[j-1], tau_st)
   }


  # Priors
  #tau_st ~ dgamma(1,1)
